<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css//user/form.css">

    </head>

    <body>
        <div class="main-top-section">

        <%- include('../includes/user/header.ejs') %>
            <section class="">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                            <div class="card shadow-2-strong">
                                <div class="card-body p-5 ">
                                    <div class="text-center">
                                        <h3 class="mb-5">CHANGE PASSWORD</h3>
                                    </div>
                                    <form action="/forgotPasswordChange" method="post">
                                        
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="newPassword">New Password</label>
                                            <input type="password" id="newPassword"
                                                class="form-control form-control-lg rounded-0"
                                                placeholder="Enter new password" name="newPassword" required />
                                            <span style="font-size: 12px;">*Must contain an uppercase letter, lowercase
                                                letter, special character and a number. Password should contain minimum
                                                8 characters</span><br>

                                            <small id="password-Error"></small>

                                        </div>
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="cNewPassword">Re-enter new Password</label>
                                            <input type="text" id="cNewPassword"
                                                class="form-control form-control-lg rounded-0"
                                                placeholder="Re-enter new password" name="cNewPassword" required />
                                            <small id="cPassword-Error"></small>


                                        </div>
                                        <div class="text-center">
                                            <button class="btn btn-md rounded-0 login-btn" type="submit"
                                                onclick="return validateForm() ">SAVE
                                                CHANGES</button>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

            <%- include('../includes/user/footerSection.ejs') %>

    </body>
    <script src="/validation/change-password.js" type="text/javascript"></script>

    <%- include('../includes/footer.ejs') %>
